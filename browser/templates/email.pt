<tal:block tal:define="post python:options['post'];
  postId python:post['post_id'];
  authorId python:options['authorId']; 
  authorName python:options['authorName'];
  authorExists python:options['authorExists'];
  authored python:options['authored'];
  authorImage python:options['authorImage'];
  showPhoto options/showPhoto;
  postIntro options/postIntro;
  postRemainder options/postRemainder;
  filesMetadata options/filesMetadata;
  timezone python:options['context'].Scripts.get.option('timezone')">
  <div tal:attributes="class options/cssClass; id string:post-${postId};">
    <p class="email-metadata">
      <a class="topic" tal:condition="options/topicName"
        tal:attributes="href string:/r/topic/${postId};"
        tal:content="options/topicName">A Topic</a>
      <span class="author">
        <strong>From:</strong>
        <a tal:condition="authorExists" class="name"
          tal:attributes="href string:/contacts/${authorId};
          title string:Profile of ${authorName};"
          tal:content="python:authorName">Me!</a>
        <span tal:condition="not:authorExists" class="name"
          tal:content="python:authorName">Me!</span>
        </span>
      <span class="posted">
        <strong>Date:</strong>
        <span class="date" 
          tal:define="date python:post['date'].strftime('%F %H:%M')">
          <span 
            tal:replace="date">
            Today, Tomorrow, Timaru
          </span>
          (<span tal:replace="timezone"/>)
        </span>
      </span>
      <a class="email-link"
        tal:attributes="href string:/r/post/${postId};"
        title="A short link to this post">Short link</a>
      </p><!--email-metadata-->
    <div tal:condition="python:showPhoto and authorImage" 
      class="userimage">
      <a tal:attributes="href string:/contacts/${authorId}">
        <img tal:attributes="src string:/${authorImage}; alt string:Photo of ${authorName}"/>
      </a>
    </div><!--authorImage-->
    <pre class="email-body"><p tal:replace="structure options/postIntro">
        This is the body of the document.
      </p>
    </pre><!--email-body-->
    <div class="email-remainder"
      tal:define="remId string:emailRemainder${postId}; 
      discloseId string:emailDiscloseButton${postId}">
      <div class="emailshowremainder" 
        tal:condition="options/postRemainder">
        <a tal:define="fn string:showHideInline('${remId}','${discloseId}')"
          tal:attributes="href string:javascript:${fn}; id discloseId;"
          href="#" title="Show the footer">&#9654;</a>
      </div><!--emailshowremander-->
      <div style="display: none;"
        tal:condition="options/postRemainder"
        tal:attributes="id remId">
        <div>
          <pre tal:content="structure options/postRemainder">
            This is the remainder of the email, with such things as the 
            footer.
          </pre>
        </div>
      </div>
    </div><!--email-remainder-->
	
    <div class="fileNotification" 
      tal:condition="filesMetadata">
      <div class="fileMetadata"
        tal:repeat="fm filesMetadata">
          <p>The following file was added to this topic.</p>
          <ul>
            <li 
              tal:define="iconName python:'%s.png'%fm['mime_type'].replace('/','-')">
              Name: 
              <a class="file" href="/favicon.ico" 
                type="application/octet-stream"
                tal:attributes="href string:${options/siteURL}/r/file/${fm/file_id}/${fm/file_name}">
                <img src="/favicon.ico" width="16" height="16" 
                  alt="application/octet-stream" 
                  tal:attributes="alt fm/mime_type;
                  src python:'/++resource++fileIcons/%s' % iconName"/>
                <span class="filename" tal:content="fm/file_name">filename</span>
              </a>
            </li>
            <li>Type: 
              <span class="mime"
                tal:content="fm/mime_type">application/octet-stream</span>
            </li>
            <li>
              Size:
              <span class="size"
                tal:content="python:'%1.2fKB' % (fm['file_size']/1024.0)">-1B</span>
            </li>
          </ul>
      </div><!--fileMetadata-->
    </div><!--fileNotification-->
  </div><!--email-details-->
</tal:block>
